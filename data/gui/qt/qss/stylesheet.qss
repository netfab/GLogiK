
#keysBox {
  background-color:#555555;
}

#keysBox QPushButton,
#inputsBox QPushButton {
  border: 2px solid #000000;
  color:#FFFFFF;
  height: 28px;
  border-radius: 6px;
  background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                    stop: 0 #444444, stop: 1 #222222);
}

#keysBox QPushButton:pressed,
#keysBox QPushButton[class="macroGKey"]:pressed,
#keysBox QPushButton[class="cmmndGKey"]:pressed
{
    background-color: #000000;
}

#keysBox QPushButton[class="currentBank"] {
  color:#FF8C00;
}

#keysBox QPushButton[class="macroGKey"],
#inputsBox QPushButton[class="macroGKey"]
{
  background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                    stop: 0 #007700, stop: 1 #002400);
}

#keysBox QPushButton[class="cmmndGKey"],
#inputsBox QPushButton[class="cmmndGKey"]
{
  background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                    stop: 0 #FF0000, stop: 1 #002400);
}
